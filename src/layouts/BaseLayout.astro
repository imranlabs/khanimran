---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import { ViewTransitions } from "astro:transitions";

import { SITE_TITLE, TRANSITION_API } from "../config";

export interface PageMeta {
  title?: string;
  description?: string;
  image?: string;
  ogType?: string;
}

export interface Props {
  // New per-page meta object
  page?: PageMeta;

  // Backwards compatibility: allow old-style title/description/image/ogType too
  title?: string;
  description?: string;
  image?: string;
  ogType?: string;

  sideBarActiveItemID?: string;
  includeSidebar?: boolean;
}

const {
  page,
  title,
  description,
  image,
  ogType,
  sideBarActiveItemID,
  includeSidebar = true,
} = Astro.props;

// Decide what to send to <BaseHead />:
// - If `page` is provided, use that
// - Otherwise, fall back to old-style props (title/description/image/ogType)
const headProps: PageMeta = page ?? { title, description, image, ogType };
---

<!doctype html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead {...headProps} />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />

      <!-- Main content area -->
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />

        <main class="w-full max-w-[900px] mx-auto px-4 pt-10 pb-8">
          <slot />
        </main>

        <Footer />
      </div>

      <!-- Sidebar drawer (for mobile + desktop) -->
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>

    <script
      type="text/javascript"
      id="MathJax-script"
      async
      src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js">
    </script>
  </body>
</html>
