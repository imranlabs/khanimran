---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';


export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Imran Khan | Optics, Imaging & AI",
  description = "Portfolio of Imran Khan — a physicist specializing in optics, computational modeling, SEM metrology, and AI-driven imaging. Explore projects in SEM image quality, Computer vision, chest X-ray classification, and plasmonic scattering simulations.",
  image = "/images/social-preview.jpg"
} = Astro.props;

const url = "https://khanimran.com";

---
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>


<meta name="title" content={title}>
<meta name="description" content={description}>

<meta property="og:type" content="website">
<meta property="og:url" content={url}>
<meta property="og:title" content={title}>
<meta property="og:description" content={description}>
<meta property="og:image" content={image}>

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content={url}>
<meta name="twitter:title" content={title}>
<meta name="twitter:description" content={description}>
<meta name="twitter:image" content={image}>

<meta name="keywords" content="Imran Khan, physics, optics, computational modeling, AI, computer vision, deep learning, machine learning, data science, image processing, portfolio, research, SEM metrology">

<!-- Favicons -->
<link rel="icon" href="/favicon.ico?v=2" sizes="any"><!-- legacy + strong fallback -->
<link rel="icon" type="image/png" sizes="32x32" href="/prism-32.png?v=2">
<link rel="icon" type="image/png" sizes="16x16" href="/prism-16.png?v=2">
<link rel="icon" type="image/png" href="/prism.png?v=2"><!-- 256/512 general -->
<link rel="icon" type="image/png" href="/prism_light.png?v=2" media="(prefers-color-scheme: light)">
<link rel="icon" type="image/png" href="/prism_dark.png?v=2"  media="(prefers-color-scheme: dark)">
<link rel="apple-touch-icon" sizes="180x180" href="/prism_apple.png?v=2">
<link rel="mask-icon" href="/prism-mask.svg?v=2" color="#0ea5e9"><!-- optional pinned tab -->


<meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)">
<meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)">

<meta name="robots" content="index, follow">
<meta name="author" content="Imran Khan">
<meta name="generator" content={Astro.generator} />

<script type="application/ld+json">
{{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Imran Khan",
  "url": "https://khanimran.com",
  "jobTitle": "Physicist | Optics, Imaging & AI",
  "description": "Physicist specializing in optics and computational modeling, transitioning into AI and computer vision.",
  "sameAs": [
    "https://github.com/imranlabs",
    "https://www.linkedin.com/in/imrankahn/"
  ]
}}
</script>