---
import BaseLayout from "../layouts/BaseLayout.astro";

// Page metadata (adjust as your layout expects)
const page = {
  title: "Contact | Imran Khan",
  description:
    "Get in touch with Imran Khan for roles and collaborations in optics, imaging, computer vision, and AI-driven metrology.",
};


const sideBarActiveItemID = "contact";
---

<BaseLayout page={page} sideBarActiveItemID={sideBarActiveItemID}>
  <section class="max-w-xl mx-auto py-12">
    <h1 class="text-3xl font-semibold mb-4">Contact</h1>

    <p class="mb-6">
      For opportunities, collaborations, or questions about my work in optics, imaging, and computer vision, you can reach me at:
    </p>

    <p class="mb-2">
      <span class="font-medium">Email:</span>
      <a
        href="mailto:imransmailbox@gmail.com"
        class="text-primary underline ml-2"
      >
        imransmailbox@gmail.com
      </a>
    </p>
  </section>
</BaseLayout>
