import rawHtml from "../../content/research/differentialscattering/scattering.html?raw";
---


<BaseLayout title="Scattering by Nanoplasmonic Mesoscale Assemblies" sideBarActiveItemID="projects">
  <!-- MathJax (render TeX delimiters \( \) and \[ \ ]) -->
  <script id="mathjax-config">
    window.MathJax = {
      tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['\\[','\\]'], ['$$','$$']] },
      svg: { fontCache: 'global' }
    };
  </script>
  <script defer src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-svg.js"></script>
  <article class="prose lg:prose-lg mx-auto max-w-3xl px-4 text-justify" set:html={rawHtml}/>
</BaseLayout>